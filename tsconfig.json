{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "vscode"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}


